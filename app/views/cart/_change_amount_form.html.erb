<%= form_with url: change_amount_path(product), method: :post do |form| %>
  <%= form.hidden_field :update_action, value: 'change' %>
  <%= form.number_field :amount, value:session.dig(:products, product.id.to_s) %>
  <%= form.submit "Change amount", class:"trounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
<% end %>