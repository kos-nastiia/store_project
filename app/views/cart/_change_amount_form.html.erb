<%= form_with url: change_amount_product_path(product), method: :post do |f| %>
  <%= f.hidden_field :update_action, value: 'change' %>
  <%= f.number_field :amount, :value => session.dig(:products, product.id.to_s),  class:'rounded-lg input-field w-24 h-9 inline-block' %>
  <%= f.submit "Change amount", class:"rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
<% end %>