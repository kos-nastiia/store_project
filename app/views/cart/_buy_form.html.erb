<%= form_with url: buy_path(product), method: :post do |form| %>
  <%= form.hidden_field :update_action, value: 'buy' %>
  <%= form.number_field :amount, value: session[:products][product.id.to_s] || 0 %>
  <%= form.submit "Add to cart", class:"rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
<% end %>
