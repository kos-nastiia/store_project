<div class="flex flex-col">
  <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
      <div class="overflow-hidden">
        <% if session[:products] %>
          <table class="min-w-full mx-4 text-sm font-light text-left">
            <thead class="font-medium border-b dark:border-neutral-500">
              <tr>
                <th scope="col" class="table-item">Name</th>
                <th scope="col" class="table-item">Price</th>
                <th scope="col" class="table-item">Amount</th>
                <th scope="col" class="table-item">Sum</th>
              </tr>
            </thead>
            <tbody>
              <% @cart.items.each do |product| %>
                <tr class="border-b hover:bg-neutral-100 dark:border-neutral-500 dark:hover:bg-neutral-600">
                  <td class="table-item"><%= product.title %></td>
                  <td class="table-item"><%= number_to_currency(product.price, :unit => "₴") %></td>
                  <td class="table-item"><%= render "cart/change_amount_form", product: product %></td>
                  <td class="table-item"><%= number_to_currency(@cart.product_sum(product), :unit => "₴") %></td>
                  <td class="table-item">
                    <%= button_to delete_item_product_path(product, update_action: 'delete') do %>
                        <i class="fa fa-regular fa-trash fa-2x"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              <tr class="border-b dark:border-neutral-500">
                <td colspan="3" class="table-item font-bold">
                  Total sum
                </td>
                <td class="table-item font-bold"><%= number_to_currency(@cart.sum, :unit => "₴") %></td>
              </tr>
            </tbody>
          </table>

          <div>
            <div class="inline-block m-5">
                <%= link_to 'Pay this order', new_order_path, class: "btn-amber" %>
            </div>

            <div class="inline-block float-right m-5">
              <%= button_to 'Delete all products', clean_cart_path, method: :delete, class: "btn-gray" %>
            </div>
          </div>
        <% else %>
            <div class="grid h-screen text-3xl place-items-center">Your cart is empty</div>
        <% end %>
      </div>
    </div>
  </div>
</div>
