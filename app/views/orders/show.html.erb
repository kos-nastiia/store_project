<div class="flex w-full mx-auto">
  <div class="mx-auto">
    <div class="flex flex-col overflow-x-auto text-base text-neutral-600 dark:text-neutral-900 sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 overflow-hidden sm:px-6 lg:px-8 ">
        <div class="block p-6 bg-white border-2 rounded-lg ">
          <ul class="ms-6 w-96">
            <h1 class="my-5 text-3xl font-bold">Order №<%= @order.id %></h1>
            <li class="mb-3"><%= @order.first_name %></li><hr>
            <li class="mb-3"><%= @order.last_name %></li><hr>
            <li class="mb-3"><%= @order.address %></li><hr>
            <li class="mb-3"><%= @order.phone %></li><hr>
          </ul>
          <table class="min-w-full p-3 my-6 text-sm font-light text-left border-2">
            <thead class="font-medium border-b dark:border-neutral-500">
              <tr>
                <th scope="col" class="table-item">Title</th>
                <th scope="col" class="table-item">Price</th>
                <th scope="col" class="table-item">Amount</th>
                <th scope="col" class="table-item">Sum</th>
              </tr>
            </thead>
            <tbody>
              <% @order.products.each do |product| %>
                <tr class="border-b dark:border-neutral-500">
                  <td class="table-item"><%= product.title %></td>
                  <td class="table-item"><%= number_to_currency(product.price, :unit => "₴") %></td>
                  <td class="text-center table-item"><%= @order.product_amount(product) %></td>
                  <td class="table-item"><%= number_to_currency(@order.product_sum(product), :unit => "₴") %></td>
                </tr>
              <% end %>
              <tr class="border-b dark:border-neutral-500">
                <td colspan="3" class="px-6 py-2 font-bold ">
                  Total sum
                </td>
                <td class="px-6 py-2 font-bold ">
                  <%= number_to_currency(@order.total_sum, :unit => "₴") %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="inline-block ml-2">
      <%= button_to 'Destroy this order', order_path(@order), method: :delete, class: "btn-grey" %>
    </div>
    <div class="inline-block ml-2">
      <%= link_to 'Back to products', products_path, class: "btn-grey" %>
    </div>
  </div>
</div>
